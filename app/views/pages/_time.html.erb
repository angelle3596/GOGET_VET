<div id="time-form" style="display: none;">
  <div class="animated slideInRight">

    <div class="wrapper-title">
      <p>WHEN DO YOU NEED IT?...</p>
    </div>
    <div class="time-now">
        <input id="time1" type="checkbox">
        <label for="time1">AS SOON AS POSSIBLE</label>
        <p>------------------------ or ------------------------</p>
        <div class="time-choose">
          <label for="Date">DD/MM</label>
          <input id="time2" type="date" name="usr_date">
          <label for="">HH:MM</label>
          <input id="time2" type="time" name="usr_time">
          <input type="submit" value="Submit">
        </div>
    </div>
   </div>
  <div class="buttons-form-time mt-4">
    <div class="bottom-left buttons-actions">
      <button type="button" class="btn-pink-small">GO BACK</button>
    </div>
    <div class="bottom-right buttons-actions">
      <button type="button" id="time-next" class="btn-pink-small">NEXT</button>
    </div>
  </div>
</div>
